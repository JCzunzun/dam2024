<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:layout_constraintStart_toStartOf="parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/image_superhero"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_superhero"
        app:layout_constraintEnd_toEndOf="@id/image_superhero"
        app:layout_constraintStart_toStartOf="@id/image_superhero"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        >
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="#cc99ff"
        android:textAlignment="center"
        android:textSize="22dp"
        android:text="Detalles"
        android:textColor="@color/black"
        />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Nombre:"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="12dp"
                />
            <TextView
                android:id="@+id/name_superhero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Alias:"
                android:textStyle="bold"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/name_superhero"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:id="@+id/alias_superhero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/name_superhero"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_marginTop="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Stats:"
                android:textStyle="bold"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/alias_superhero"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:id="@+id/stats_superhero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/alias_superhero"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="textEnd"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Apariencia:"
                android:textStyle="bold"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/stats_superhero"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:id="@+id/appereance_superhero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/stats_superhero"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="textEnd"
                android:layout_marginTop="12dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="#cc99ff"
            android:textAlignment="center"
            android:textSize="22dp"
            android:text="Detalles extras"
            android:textColor="@color/black"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="15dp">
            <TextView
                android:id="@+id/biography"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Biografia:"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/bio_superhero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/biography"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/working"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Trabajo:"
                android:textStyle="bold"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/bio_superhero"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:id="@+id/trabajo_superhero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/working"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textAlignment="textStart"
                />
            <TextView
                android:id="@+id/connections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Conexiones:"
                android:textStyle="bold"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/trabajo_superhero"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:id="@+id/connect_superhero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/connections"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textAlignment="textStart"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>